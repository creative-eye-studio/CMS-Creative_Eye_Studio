{% extends 'admin.html.twig' %}

{% block title %}Pages du site{% endblock %}

{% block body %}

<section class="bloc1">
    <p class="btn-add">
        <a class="btn-link" href="{{ path('add_page') }}">Ajouter une page</a>
    </p>
    <h2>Liste des pages</h2>
    {% for page in pages %}
    <div class="line">
        <p>{{ page.name }}</p>
        <ul>
            <li>
                <a>Voir</a>
            </li>
            <li>
                <a>Modifier</a>
            </li>
            <li>
                <a>Supprimer</a>
            </li>
        </ul>
    </div>
    {% else %}
        <p>Il n'y a pas encore de pages publi√©es !</p>
    {% endfor %}
</section>

{% endblock %}